{
  "name": "Slimformation",
  "description": "This extension helps you be more conscious about your information consumption.",
  "version": "0.0.1",
  "manifest_version": 2,
  
  "background" : {
    "page" : "app/views/background.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "app/images/19.png",
      "38": "app/images/38.png"
    },
    "default_popup": "app/views/mockup.html",
    "default_title": "Slimformation"
  },

  "content_scripts": [
  {
    "matches": ["http://*/*"],
    "js": ["app/scripts/js/background.js"],
    "run_at": "document_idle"
  }
  ],

  "icons": {
    "16": "app/images/16.png",
    "48": "app/images/48.png",
    "128": "app/images/128.png"
  },

  "permissions": [
  ]
}
